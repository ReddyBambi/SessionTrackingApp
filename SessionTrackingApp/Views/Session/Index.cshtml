@model IEnumerable<SessionViewModel>
@{
    ViewData["Title"] = "Session Tracking";
}

<div class="row">
    <div class="col-12">
        <h2>@ViewData["Title"]</h2>
        <p class="lead">View all tracked user sessions and navigation patterns.</p>

        <div class="mb-3">
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to Home</a>
            <span class="badge bg-info ms-2">Total Sessions: @Model.Count()</span>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Session ID</th>
                            <th>Start Time</th>
                            <th>Last Page</th>
                            <th>Pages Visited</th>
                            <th>Updated At</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model)
                        {
                            <tr>
                                <td>
                                    <code class="text-primary">@session.SessionId.Substring(0, 8)...</code>
                                </td>
                                <td>@session.StartTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <span class="badge bg-secondary">@session.LastPage</span>
                                </td>
                                <td>
                                    <small>@session.PagesVisited.Replace(";", " → ")</small>
                                </td>
                                <td>@session.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    @{
                                        var duration = session.UpdatedAt - session.StartTime;
                                    }
                                    <span class="badge bg-success">@duration.ToString(@"mm\:ss")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4>No sessions found</h4>
                <p>Start navigating to create your first tracked session!</p>
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go to Home Page</a>
            </div>
        }
    </div>
</div>
